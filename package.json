{
  "name": "showcar-carousel",
  "version": "1.0.0",
  "description": "An simple carousel elemen of the showcar ui library",
  "main": "dist/showcar-carousel.js",
  "scripts": {
    "prestart": "npm install",
    "start": "node $npm_package_config_server",
    "prebuild": "npm run build:clean",
    "build:js": "npm run build:babel && npm run build:uglify",
    "build:babel": "mkdir dist && babel $npm_package_config_src.js -o $npm_package_config_dist.js -s",
    "build:uglify": "uglifyjs $npm_package_config_dist.js --o $npm_package_config_dist.min.js --source-map $npm_package_config_dist.min.js.map -p 5 -c -m",
    "build:css": "npm run build:sass && npm run build:autoprefixer && npm run build:cleancss",
    "build:sass": "node-sass ./src/ -o ./dist/",
    "build:autoprefixer": "node ./node_modules/postcss-cli/bin/postcss --use autoprefixer $npm_package_config_dist.css -d dist/",
    "build:cleancss": "cleancss --source-map -o $npm_package_config_dist.min.css $npm_package_config_dist.css | gzip -9 -c > $npm_package_config_dist.min.css.gz",
    "build": "npm run build:js && npm run build:css",
    "build:clean": "rimraf dist",
    "postbuild": "echo 'Build succeeded!'",
    "watch:server": "nodemon --ignore dist --ignore src $npm_package_config_server",
    "watch:css": "node-sass -w ./src/ -o ./dist/",
    "watch:js": "babel $npm_package_config_src.js -w -o $npm_package_config_dist.js -s",
    "watch:browser": "live-reload --port 9091 example/",
    "prewatch": "echo 'Starting watchers'",
    "watch": "npm run watch:server && npm run watch:css && npm run watch:js && npm run watch:browser",
    "version:major": "npm version major",
    "version:minor": "npm version minor",
    "version:patch": "npm version patch",
    "prepush": "echo 'Pushing code to GitHub'",
    "push": "git push --tags origin HEAD:master",
    "deploy:prod": "npm run build -s && npm run version:patch && npm run push"
  },
  "config": {
    "server": "./example/index.js",
    "dist": "./dist/showcar-carousel",
    "src": "./src/showcar-carousel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AutoScout24/showcar-carousel.git"
  },
  "keywords": [
    "carousel",
    "showcar",
    "ui"
  ],
  "author": "Gerbrand van Dantzig @autoscout24",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AutoScout24/showcar-carousel/issues"
  },
  "homepage": "https://github.com/AutoScout24/showcar-carousel#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "clean-css": "^3.4.17",
    "live-reload": "^1.1.0",
    "node-sass": "^3.7.0",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.2",
    "uglify-js": "^2.6.2"
  }
}
